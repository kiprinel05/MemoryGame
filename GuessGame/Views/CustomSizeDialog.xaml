<Window x:Class="GuessGame.Views.CustomSizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Size Game" Height="250" Width="300"
        WindowStartupLocation="CenterOwner">
    
    <StackPanel Margin="15">
        <TextBlock Text="Rows:" Margin="0 0 0 5"/>
        <ComboBox x:Name="RowsComboBox" SelectedIndex="2">
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
            <ComboBoxItem>6</ComboBoxItem>
        </ComboBox>
        
        <TextBlock Text="Columns:" Margin="0 15 0 5"/>
        <ComboBox x:Name="ColumnsComboBox" SelectedIndex="2">
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
            <ComboBoxItem>6</ComboBoxItem>
        </ComboBox>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
            <Button Content="OK" Click="OK_Click" Width="80" Margin="0 0 10 0"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>